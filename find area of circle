#include <stdio.h>

int main() {
    float r,a;
    int n;
    do
    {
        printf("Enter radius : ");
        scanf("%f",&r);
        a = 3.14 * r * r;
        printf("\nArea is %0.2f",a);
        printf("\nPress 1- to try for another circle or press 0 to exit");
        scanf("%d",&n);
    } while (n==1);

    return 0;
}
